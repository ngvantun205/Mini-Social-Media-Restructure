@model List<Mini_Social_Media.Models.ViewModel.PostViewModel>
@{
    ViewData["Title"] = "News Feed";
}

<div class="newsfeed-container">
    <div id="postContainer">
        @await Html.PartialAsync("_PostListPartial", Model)
    </div>

    <div id="loading" class="loading-spinner" style="display:none;">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p style="margin-top: 12px; color: #8e8e8e; font-size: 14px;">Loading more posts...</p>
    </div>

    <div id="endOfFeed" class="end-of-feed" style="display:none;">
        <i class="bi bi-check-circle"></i>
        <p>You're all caught up!</p>
        <small style="font-size: 13px;">You've seen all new posts</small>
    </div>
</div>

@section Scripts {
    <script src="~/js/newfeed.js"></script>
}