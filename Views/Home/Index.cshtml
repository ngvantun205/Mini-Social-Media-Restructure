@model List<Mini_Social_Media.Models.ViewModel.FeedItemViewModel>
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> _userManager
@{
    ViewData["Title"] = "News Feed";
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var currentUser = await _userManager.GetUserAsync(User); 
}


@await Html.PartialAsync("_RightSidebar")

<div class="newsfeed-container">
    <div class="stories-tray d-flex align-items-start">
        <a asp-controller="Story" asp-action="Create" class="story-item">
            <div class="story-ring">
                <img src="@currentUser.AvatarUrl" class="story-avatar" onerror="this.onerror=null; this.src='/images/default-avatar.png';">
                <div class="add-story-icon"><i class="fas fa-plus"></i></div>
            </div>
            <span class="story-username fw-bold text-dark">Your story</span>
        </a>

        <div id="friendsStoryList" class="d-flex"></div>
    </div>

    <div id="postContainer">
        @await Html.PartialAsync("_PostListPartial", Model)
    </div>

    <div id="loading" class="loading-spinner" style="display:none;">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2 text-muted small">Loading more posts...</p>
    </div>
    <div id="endOfFeed" class="end-of-feed" style="display:none;">
        <i class="bi bi-check-circle-fill text-success fs-1"></i>
        <p class="mt-2">You're all caught up!</p>
    </div>
</div>

<div id="storyViewer" style="display:none;">
    <button class="close-story-btn" onclick="closeStoryViewer()"><i class="bi bi-x-lg"></i></button>
    
    <div class="story-content-wrapper">
        <div class="progress-bar-container" id="storyProgressBar"></div>

        <div class="story-viewer-header">
            <div class="user-info-area">
                <img id="viewerAvatar" src="" class="rounded-circle me-2 border" width="32" height="32" onerror="this.onerror=null; this.src='/images/default-avatar.png';">
                <div>
                    <div id="viewerUsername" class="fw-bold fs-6">Username</div>
                    <small id="viewerTime" class="opacity-75" style="font-size: 11px;">Just now</small>
                </div>
            </div>
            
            <button id="btnDeleteStory" class="delete-story-btn" onclick="deleteCurrentStory()" style="display:none;" title="Delete this story">
                <i class="bi bi-trash"></i>
            </button>
        </div>

        <img id="storyImage" class="story-media" style="display:none;">
        <video id="storyVideo" class="story-media" style="display:none;" playsinline></video>
        
        <div id="storyCaptionOverlay" class="story-caption-overlay" style="display:none;"></div>

        <div class="nav-zone nav-prev" onclick="prevStory()"></div>
        <div class="nav-zone nav-next" onclick="nextStory()"></div>
    </div>
</div>

@if (ViewBag.TodayMemory != null)
{
    var memory = (Mini_Social_Media.Models.ViewModel.MemoryViewModel)ViewBag.TodayMemory;
    
    <div class="modal fade" id="memoryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                
                <div class="modal-header border-0 text-white" 
                     style="background: linear-gradient(135deg, #FF512F 0%, #DD2476 100%);">
                    <div>
                        <h5 class="modal-title fw-bold"><i class="bi bi-clock-history"></i> On This Day</h5>
                        <p class="mb-0 small opacity-75">Bạn có một kỷ niệm vào @memory.YearsAgo năm trước</p>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" id="btnCloseMemory"></button>
                </div>

                <div class="modal-body p-0 bg-light position-relative">
                    @if (memory.Medias != null && memory.Medias.Any())
                    {
                        var media = memory.Medias.First();
                        if (media.MediaType == "video")
                        {
                            <video controls autoplay muted class="w-100 d-block" style="max-height: 400px; object-fit: contain; background:black;">
                                <source src="@media.Url">
                            </video>
                        }
                        else
                        {
                            <img src="@media.Url" class="w-100 d-block" style="max-height: 400px; object-fit: cover;">
                        }
                    }
                    
                    @if (!string.IsNullOrEmpty(memory.Caption))
                    {
                        <div class="p-3 bg-white border-top">
                            <small class="text-muted fw-bold">@memory.CreatedAt.ToString("dd/MM/yyyy")</small>
                            <p class="mb-0 fst-italic text-dark">"@memory.Caption"</p>
                        </div>
                    }
                </div>

                <div class="modal-footer justify-content-center border-0 bg-white pb-4">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                        Đóng lại
                    </button>
                    <button type="button" class="btn btn-primary rounded-pill px-4 fw-bold" onclick="shareMemoryFromPopup(@memory.PostId, '@memory.Owner.UserName', @memory.YearsAgo)">
                    <i class="bi bi-share-fill me-2"></i> Chia sẻ Kỷ niệm
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/newfeed.js"></script>
    <script src="~/js/bar.js"></script>
    <script src="~/js/story.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var userId = @(currentUserId ?? "0");
            initStoryModule(userId);
        });
        window.FEED_SESSION_SEED = @ViewBag.SessionSeed;
        document.addEventListener("DOMContentLoaded", function() {
        var hasMemory = @(ViewBag.TodayMemory != null ? "true" : "false");
        
        if (hasMemory) {
            checkAndShowMemory();
        }

        var closeBtn = document.getElementById('btnCloseMemory');
        if(closeBtn){
            closeBtn.addEventListener('click', function(){
                markMemoryAsSeen();
            });
        }
        
        var modalEl = document.getElementById('memoryModal');
        modalEl.addEventListener('hidden.bs.modal', function () {
            markMemoryAsSeen();
        });
    });

    function checkAndShowMemory() {
        var today = new Date().toISOString().slice(0, 10); 
        var userId = @currentUserId; 
        var storageKey = "memory_seen_" + today + "_" + userId;

        var isSeen = localStorage.getItem(storageKey);

        if (!isSeen) {
            var myModal = new bootstrap.Modal(document.getElementById('memoryModal'));
            myModal.show();
        }
    }

    function markMemoryAsSeen() {
        var today = new Date().toISOString().slice(0, 10);
        var userId = @currentUserId;
        var storageKey = "memory_seen_" + today + "_" + userId;

        localStorage.setItem(storageKey, "true");
    }

    function shareMemoryFromPopup(postId, ownerName, yearsAgo) {
    markMemoryAsSeen();

    var memoryModalEl = document.getElementById('memoryModal');
    var memoryModal = bootstrap.Modal.getInstance(memoryModalEl);
    memoryModal.hide();

    setTimeout(function() {
        if (typeof openShareModal === 'function') {
            openShareModal(postId, ownerName);
            var captionInput = document.getElementById('shareCaption');
            if(captionInput) {
                captionInput.value = `Kỷ niệm ${yearsAgo} năm trước! ❤️ #OnThisDay`;
                
                captionInput.focus();
            }
        } else {
            alert("Lỗi: Không tìm thấy chức năng Share!");
        }
    }, 500);
}
    </script>
}