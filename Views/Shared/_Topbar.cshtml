<!-- TOP BAR -->
<div class="top-bar">
    <div class="top-bar-left">
        <a href="/" class="top-bar-logo">MySocial</a>

        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search for friends, posts, hashtags...">
        </div>
    </div>

    <div class="top-bar-right">
        <div class="top-icon" data-page="home" title="Home">
            <i class="fas fa-home"></i>
        </div>

        <div class="top-icon" data-page="messages" title="Messages">
            <i class="fas fa-comment"></i>
            <span class="badge">3</span>
        </div>

        <div class="top-icon" data-page="notifications" title="Notifications">
            <i class="fas fa-bell"></i>
            <span class="badge">12</span>
        </div>

        <div class="user-dropdown">
            <img src="/images/default-avatar.jpg" alt="User" class="user-avatar-top">

            <div class="dropdown-menu">
                <div class="dropdown-header">
                    <div class="dropdown-user-info">
                        <img src="/images/default-avatar.jpg" alt="User">
                        <div class="dropdown-user-details">
                            <p class="dropdown-user-name">John Doe</p>
                            <p class="dropdown-user-handle">johndoe</p>
                        </div>
                    </div>
                </div>

                <div class="dropdown-body">
                    <a href="/profile" class="dropdown-item">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>

                    <a href="/settings" class="dropdown-item">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>

                    <a href="/saved" class="dropdown-item">
                        <i class="fas fa-bookmark"></i>
                        <span>Saved Posts</span>
                    </a>

                    <a href="/help" class="dropdown-item">
                        <i class="fas fa-question-circle"></i>
                        <span>Help & Support</span>
                    </a>

                    <a href="/logout" class="dropdown-item logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>