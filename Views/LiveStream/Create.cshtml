@{
    ViewData["Title"] = "Go Live";
    Layout = "_Layout1";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4 text-center">
            <div class="mb-4">
                <i class="bi bi-broadcast text-danger" style="font-size: 3rem;"></i>
                <h2 class="fw-bold mt-2">Start a Live Stream</h2>
                <p class="text-muted">Connect with your followers in real-time.</p>
            </div>

            <form asp-action="Create" method="post">
                <div class="form-floating mb-4">
                    <input type="text" name="title" class="form-control" id="streamTitle" placeholder="What's on your mind?" required>
                    <label for="streamTitle">Stream Title</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg fw-bold">
                        <i class="bi bi-camera-video-fill me-2"></i> Go Live Now
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>