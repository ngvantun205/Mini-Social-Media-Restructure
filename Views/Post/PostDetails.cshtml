@model PostViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Post Detail";
}

<div class="post-detail-container">
    <div class="post-detail-card">

        <!-- Post Header -->
        <div class="post-header">
            <div class="post-user-info">
                <div class="user-avatar">
                    <img src="/images/avatar.png" alt="User Avatar" />
                </div>
                <div class="user-details">
                    <h3 class="username">@User.Identity.Name</h3>
                    @if (!string.IsNullOrEmpty(Model.Location)) {
                        <p class="location">
                            <i class="bi bi-geo-alt-fill"></i>
                            @Model.Location
                        </p>
                    }
                </div>
            </div>

            @if (Model.UserId == int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value)) {
                <div class="post-actions-menu">
                    <button class="btn-menu" type="button">
                        <i class="bi bi-three-dots"></i>
                    </button>
                </div>
            }
        </div>

        <!-- Media Section -->
        @if (Model.Medias != null && Model.Medias.Any()) {
            <div class="post-media-container">
                @if (Model.Medias.Count() == 1) {
                    var media = Model.Medias.First();
                    <div class="media-single">
                        @if (media.MediaType == "video") {
                            <video controls>
                                <source src="@media.Url" type="video/mp4" />
                                Your browser does not support video playback.
                            </video>
                        }
                        else {
                            <img src="@media.Url" alt="Post media" />
                        }
                    </div>
                }
                else {
                    <div class="media-carousel" id="mediaCarousel">
                        <div class="media-slides">
                            @foreach (var media in Model.Medias) {
                                <div class="media-slide">
                                    @if (media.MediaType == "video") {
                                        <video controls>
                                            <source src="@media.Url" type="video/mp4" />
                                        </video>
                                    }
                                    else {
                                        <img src="@media.Url" alt="Post media" />
                                    }
                                </div>
                            }
                        </div>

                        @if (Model.Medias.Count() > 1) {
                            <button class="carousel-btn prev-btn" onclick="moveSlide(-1)">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <button class="carousel-btn next-btn" onclick="moveSlide(1)">
                                <i class="bi bi-chevron-right"></i>
                            </button>

                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.Medias.Count(); i++) {
                                    <span class="indicator @(i == 0 ? "active" : "")" onclick="goToSlide(@i)"></span>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else {
            <div class="no-media">
                <i class="bi bi-image"></i>
                <p>No media available</p>
            </div>
        }

        <!-- Post Actions -->
        <div class="post-actions">
            <div class="action-buttons">
                <button class="action-btn like-btn">
                    <i class="bi bi-heart"></i>
                </button>
                <button class="action-btn comment-btn">
                    <i class="bi bi-chat"></i>
                </button>
                <button class="action-btn share-btn">
                    <i class="bi bi-send"></i>
                </button>
            </div>
            <button class="action-btn bookmark-btn">
                <i class="bi bi-bookmark"></i>
            </button>
        </div>

        <!-- Post Stats -->
        <div class="post-stats">
            <p class="likes-count">
                <strong>@Model.LikeCount</strong> likes
            </p>
        </div>

        <!-- Post Caption -->
        @if (!string.IsNullOrEmpty(Model.Caption)) {
            <div class="post-caption">
                <strong>@User.Identity.Name</strong>
                <span class="caption-text">@Model.Caption</span>
            </div>
        }

        <!-- Hashtags -->
        @if (!string.IsNullOrEmpty(Model.Hashtags)) {
            <div class="post-hashtags">
                @foreach (var tag in Model.Hashtags.Split(' ', StringSplitOptions.RemoveEmptyEntries)) {
                    <a href="#" class="hashtag">@tag</a>
                }
            </div>
        }

        <!-- Comments Section -->
        <div class="post-comments">
            <button class="view-comments-btn">
                View all @Model.CommentCount comments
            </button>

            <!-- Add Comment -->
            <div class="add-comment">
                <input type="text" placeholder="Add a comment..." class="comment-input" />
                <button class="post-comment-btn">Post</button>
            </div>
        </div>

        <!-- Post Time -->
        <div class="post-time">
            <small>2 hours ago</small>
        </div>

        <!-- Edit/Delete Actions (Owner Only) -->
        @if (Model.UserId == int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value)) {
            <div class="post-owner-actions">
                <a asp-action="EditPost" asp-route-postId="@Model.PostId" class="btn btn-edit">
                    <i class="bi bi-pencil"></i>
                    Edit Post
                </a>
                <button type="button" class="btn btn-delete" onclick="confirmDelete(@Model.PostId)">
                    <i class="bi bi-trash"></i>
                    Delete Post
                </button>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<form asp-action="DeletePost" method="post" id="deleteForm" style="display: none;">
    <input type="hidden" name="postId" id="deletePostId" value="@Model.PostId" />
</form>

@section Scripts {
    <script src="~/js/post-detail.js"></script>
}