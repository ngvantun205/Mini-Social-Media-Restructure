@model Mini_Social_Media.Models.InputModel.PostInputModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Post";
}

<div class="create-post-container">
    <div class="create-post-card">
        <!-- Header -->
        <div class="create-post-header">
            <h2>Create New Post</h2>
            <p>Share your moment with the world</p>
        </div>

        <!-- Form -->
        <form asp-controller="Post" asp-action="CreatePost" method="post" enctype="multipart/form-data" id="createPostForm">

            <!-- Media Upload Section -->
            <div class="form-group media-upload-section">
                <label class="form-label">
                    <i class="bi bi-image"></i>
                    Photos & Videos
                </label>
                <div class="media-upload-area" id="mediaUploadArea">
                    <input asp-for="MediaFiles" type="file" multiple accept="image/*,video/*" id="mediaInput" class="media-input" />
                    <div class="upload-placeholder">
                        <i class="bi bi-cloud-upload"></i>
                        <h4>Drag photos and videos here</h4>
                        <p>or click to select from your device</p>
                        <button type="button" class="btn-select-files">Select Files</button>
                    </div>
                    <div class="media-preview-grid" id="mediaPreviewGrid"></div>
                </div>
                <span asp-validation-for="MediaFiles" class="text-danger"></span>
            </div>

            <!-- Caption Section -->
            <div class="form-group">
                <label asp-for="Caption" class="form-label">
                    <i class="bi bi-pencil"></i>
                    Caption
                </label>
                <textarea asp-for="Caption" class="form-control" rows="4" placeholder="Write a caption..."></textarea>
                <span asp-validation-for="Caption" class="text-danger"></span>
                <div class="char-count">
                    <span id="charCount">0</span>/2000
                </div>
            </div>

            <!-- Location Section -->
            <div class="form-group">
                <label asp-for="Location" class="form-label">
                    <i class="bi bi-geo-alt"></i>
                    Location
                </label>
                <input asp-for="Location" class="form-control" placeholder="Add location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <!-- Hashtags Section -->
            <div class="form-group">
                <label asp-for="Hashtags" class="form-label">
                    <i class="bi bi-hash"></i>
                    Hashtags
                </label>
                <input asp-for="Hashtags" class="form-control" placeholder="Add hashtags (e.g., #travel #food)" />
                <span asp-validation-for="Hashtags" class="text-danger"></span>
                <small class="form-hint">Separate hashtags with spaces</small>
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
                <a href="/" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i>
                    Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send"></i>
                    Share Post
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/create-post.js"></script>
}