@{
    Layout = "_SettingsLayout";
}

@if (ViewBag.Success == true) {
    <div id="success-alert" class="alert alert-success">Password changed successfully!</div>
}
@if (ViewBag.Errors != null) {
    <div class="alert alert-danger">
        @foreach (var err in ViewBag.Errors) {
            <div>@err</div>
        }
    </div>
}
<div class="change-password-form">
    <form asp-action="ChangePassword" method="post">
        <div class="form-row">
            <label>Current Password</label>
            <input name="Password" type="password" placeholder="Current password">
        </div>

        <div class="form-row">
            <label>New Password</label>
            <input name="NewPassword" type="password" placeholder="New password">
        </div>

        <div class="form-row">
            <label>Confirm Password</label>
            <input name="ComfirmNewPassword" type="password" placeholder="Confirm new password">
        </div>

        <div class="form-row">
            <label></label>
            <button type="submit" class="btn-submit">Change Password</button>
        </div>
    </form>
</div>

<style>
    .change-password-form {
        max-width: 700px;
        padding: 2rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 2rem;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 600;
        text-align: right;
        color: #262626;
    }

    input {
        padding: 0.5rem 0.75rem;
        border: 1px solid #dbdbdb;
        border-radius: 4px;
        font-size: 0.95rem;
    }

        input:focus {
            outline: none;
            border-color: #a8a8a8;
        }

    .btn-submit {
        background: #0095f6;
        color: white;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

        .btn-submit:hover {
            background: #1877f2;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alert = document.getElementById("success-alert");
        if (alert) {
            alert.style.opacity = 1;
            setTimeout(() => {
                alert.style.transition = "opacity 0.6s";
                alert.style.opacity = 0;
            }, 3000);
        }
    });
</script>
