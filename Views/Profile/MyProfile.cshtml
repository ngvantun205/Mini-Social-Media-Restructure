@model MyProfileViewModel
@using System.Security.Claims;
@{
    ViewData["Title"] = "My Profile";
    Layout = "_Layout";
    var currentUserIdstr = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    int userId = currentUserIdstr == null ? 0 : int.Parse(currentUserIdstr);
}
<div class="container mt-4" style="max-width: 935px;">
    <header class="row mb-5 align-items-center">
        <div class="col-4 col-md-4 d-flex justify-content-center">
            <div class="position-relative">
                <input type="file" id="avatarInput" accept="image/*" style="display: none;" onchange="uploadAvatar(this)" />

                <img id="avatarImage"
                     src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/images/default-avatar.png" : Model.AvatarUrl)"
                     alt="@Model.UserName"
                     class="rounded-circle border border-2"
                     style="width: 150px; height: 150px; object-fit: cover; cursor: pointer;"
                     onclick="triggerFileInput()"> <div class="btn btn-sm btn-light position-absolute bottom-0 end-0 rounded-circle shadow-sm"
                                                        title="Change Avatar"
                                                        style="cursor: pointer;"
                                                        onclick="triggerFileInput()">
                    <i class="bi bi-camera-fill"></i>
                </div>
            </div>
        </div>

        <div id="uploadLoading" style="display:none; position: absolute;">Uploading...</div>

        <div class="col-8 col-md-8">
            <div class="d-flex align-items-center mb-3 flex-wrap gap-3">
                <h2 class="fw-light m-0 me-3" style="font-size: 28px;">@Model.UserName</h2>

                <a asp-controller="Account" asp-action="Edit" class="btn btn-light btn-sm fw-bold border px-3">Edit Profile</a>
                <a asp-controller="Story" asp-action="StoryArchives" class="btn btn-light btn-sm fw-bold border px-3">View Archive</a>

                <a asp-controller="Profile" asp-action="RecentActivity" class="btn btn-link text-dark p-0 ms-2" title="Recent Activity"><i class="bi bi-clock-history fs-4"></i></a>
            </div>

            <ul class="list-unstyled d-flex mb-3 gap-4" style="font-size: 16px;">
                <ul class="list-unstyled d-flex mb-3 gap-4" style="font-size: 16px;">
                    <li><strong>@Model.Posts.Count</strong> posts</li>

                    <li style="cursor: pointer;" onclick="openFollowModal('followers', @userId)">
                        <strong>@Model.FollowerCount</strong> followers
                    </li>

                    <li style="cursor: pointer;" onclick="openFollowModal('following', @userId)">
                        <strong>@Model.FollowingCount</strong> following
                    </li>
                </ul>
            </ul>

            <div>
                <div class="fw-bold">@Model.FullName</div>
                <div class="text-break" style="white-space: pre-line;">@Model.Bio</div>
                @if (!string.IsNullOrEmpty(Model.WebsiteUrl)) {
                    <a href="@Model.WebsiteUrl" target="_blank" class="text-decoration-none fw-bold text-primary">
                        <i class="bi bi-link-45deg"></i> @Model.WebsiteUrl
                    </a>
                }
            </div>
        </div>
    </header>

    <div class="d-flex gap-4 mb-5 overflow-auto pb-2 border-bottom">
        <div class="text-center" style="min-width: 80px;">
            <div class="rounded-circle border border-2 p-1 mb-1">
                <div class="bg-light rounded-circle" style="width: 70px; height: 70px;"></div>
            </div>
            <small class="fw-bold">Highlights</small>
        </div>
        <div class="text-center" style="min-width: 80px; cursor: pointer;">
            <div class="rounded-circle border border-2 p-1 mb-1">
                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                    <i class="bi bi-plus-lg fs-2 text-muted"></i>
                </div>
            </div>
            <small class="fw-bold">New</small>
        </div>
    </div>

    <ul class="nav nav-tabs justify-content-center border-bottom-0 mb-3" id="profileTabs">
        <li class="nav-item">
            <a class="nav-link active text-uppercase border-0 border-top border-dark text-dark fw-bold" href="#" style="border-radius: 0; margin-top: -1px;">
                <i class="bi bi-grid-3x3 me-1"></i> Posts
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-uppercase border-0 text-muted" href="#">
                <i class="bi bi-bookmark me-1"></i> Saved
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-uppercase border-0 text-muted" href="#">
                <i class="bi bi-person-badge me-1"></i> Tagged
            </a>
        </li>
    </ul>

    <div class="row g-1 g-md-4">
        @if (Model.Posts != null && Model.Posts.Any()) {
            foreach (var post in Model.Posts) {
                <div class="col-4">
                    <div class="ratio ratio-1x1 position-relative group-hover-overlay">
                        @if (post.MediaUrl != null) {
                            @if (post.MediaUrl.EndsWith(".mp4")) {
                                <video src="@post.MediaUrl" class="w-100 h-100 object-fit-cover"></video>
                            }
                            else {
                                <img src="@post.MediaUrl" class="w-100 h-100 object-fit-cover" alt="Post">
                            }
                        }
                        else {
                            <img src="https://duckduckgo.com/?q=insta+post&iar=images&atb=v488-1&iai=https%3A%2F%2Fimg.freepik.com%2Ffree-vector%2Finstagram-post-template_23-2147671656.jpg%3Fw%3D2000" class="w-100 h-100 object-fit-cover" alt="Post">
                        }
                        <a href="/Post/PostDetails?id=@post.PostId" class="overlay d-flex justify-content-center align-items-center text-white text-decoration-none">
                            <div class="d-flex gap-4 fs-5 fw-bold">
                                <span><i class="bi bi-heart-fill"></i> @post.LikeCount</span>
                                <span><i class="bi bi-chat-fill"></i> @post.CommentCount</span>
                            </div>
                        </a>
                    </div>
                </div>
            }
        }
        else {
            <div class="text-center py-5">
                <div class="mb-3"><i class="bi bi-camera fs-1 border rounded-circle p-3"></i></div>
                <h3>No Posts Yet</h3>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="followModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" style="max-width: 400px;">
        <div class="modal-content rounded-4 border-0">

            <div class="modal-header border-bottom-0 py-2">
                <div class="w-100 text-center position-relative">
                    <h5 class="modal-title fw-bold fs-6" id="followModalTitle">Followers</h5>
                    <button type="button" class="btn-close position-absolute top-50 end-0 translate-middle-y me-2" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>

            <div class="modal-body p-0">
                <div id="followListContainer" class="d-flex flex-column">
                    <div class="text-center py-5">
                        <div class="spinner-border spinner-border-sm text-muted"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/profile.js"></script>

